{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "dependencies": {
    "mf-styling": "git+https://github.com/arlac77/mf-styling.git"
  },
  "devDependencies": {
    "browser-sync": "--delete--",
    "connect-history-api-fallback": "--delete--",
    "express": "--delete--",
    "http-proxy-middleware": "--delete--",
    "postcss": "--delete--",
    "postcss-import": "--delete--",
    "svelte-preprocess": "--delete--",
    "light-server": "git+https://github.com/arlac77/light-server.git",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "svelte": "^3.9.2",
    "npm-pkgbuild": "^6.9.0",
    "semantic-release": "^15.13.24",
    "@semantic-release/exec": "^3.3.6"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "light-server -s public --servePrefix {{urlPrefix}} --historyindex {{urlPrefix}}/index.html -p 5000 --proxypath {{api}} -x {{proxyTarget}} -w 'src/**,public/*.css # rollup -c'"
  },
  "engines": {
    "node": ">=12.9.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "config": {
    "api": "api",
    "proxyTarget": "https://somewhere/",
    "urlPrefix": "/services/{{name}}/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/install.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=242.84",
      "nginx-mainline": ">=1.17.3"
    }
  },
  "template": {
    "usedBy": [
      "arlac77/konsum-frontend-svelte",
      "arlac77/svelte-playground",
      "arlac77/system-dashboard-frontend"
    ],
    "_files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v2-orange.svg",
              "url": "https://svelte.dev"
            }
          ]
        }
      }
    ]
  }
}