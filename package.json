{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "dependencies": {
    "mf-styling": "arlac77/mf-styling"
  },
  "devDependencies": {
    "light-server": "arlac77/light-server",
    "rollup": "^1.21.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.12.1",
    "npm-pkgbuild": "^6.9.1",
    "semantic-release": "^15.13.24",
    "@semantic-release/exec": "^3.3.6"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "engines": {
    "node": ">=12.10.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "config": {
    "api": "/services/{{name}}/api",
    "proxyTarget": "https://somewhere/",
    "urlPrefix": "/services/{{name}}/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/install.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=243.0",
      "nginx-mainline": ">=1.17.3"
    }
  },
  "template": {
    "inheritFrom": "arlac77/npm-package-template",
    "usedBy": [
      "arlac77/konsum-frontend-svelte",
      "arlac77/hook-ci-fronend-svelte",
      "arlac77/system-dashboard-frontend"
    ],
    "_files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v2-orange.svg",
              "url": "https://svelte.dev"
            }
          ]
        }
      }
    ]
  }
}