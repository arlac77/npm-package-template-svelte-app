{
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^1.3.0",
    "svelte-guard-history-router": "^1.1.11",
    "svelte-session-manager": "^1.0.5"
  },
  "devDependencies": {
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-dev": "^1.1.1",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "svelte": "^3.18.1"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "config": {
    "base": "/services/{{name}}/",
    "api": "/services/{{name}}/api",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/{{name}}/frontend",
    "depends": {
      "systemd": ">=244.1"
    }
  },
  "template": {
    "inheritFrom": [
      "arlac77/npm-package-template-root",
      "arlac77/npm-package-template-travis",
      "arlac77/npm-package-template-rollup",
      "arlac77/npm-package-template-nginx",
      "arlac77/npm-package-template-pacman",
      "arlac77/npm-package-template-release"
    ],
    "usedBy": [
      "arlac77/entitlement-provider-frontend",
      "arlac77/hook-ci-frontend-svelte",
      "arlac77/konsum-frontend-svelte",
      "arlac77/system-dashboard-frontend"
    ],
    "files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v3-orange.svg",
              "url": "https://svelte.dev"
            }
          ]
        }
      },{
        "merger": "JSONMerger",
        "pattern": "manifest.json"
      }
    ]
  }
}
