{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "dependencies": {
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^1.1.2",
    "svelte-guard-history-router": "^1.1.9",
    "svelte-session-manager": "^1.0.3"
  },
  "license": "BSD-2-Clause",
  "devDependencies": {
    "npm-gkpbuild": "--delete--",

    "rollup": "^1.27.13",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-dev": "^1.1.1",
    "rollup-plugin-consts": "^1.0.1",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.3",
    "svelte": "^3.16.5",
    "npm-pkgbuild": "^6.11.1",
    "semantic-release": "^15.14.0",
    "@semantic-release/exec": "^3.3.8"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "engines": {
    "node": ">=12.14.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "config": {
    "base": "/services/{{name}}/",
    "api": "/services/{{name}}/api",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=244",
      "nginx-mainline": ">=1.17.6"
    }
  },
  "template": {
    "inheritFrom": "arlac77/npm-package-template",
    "usedBy": [
      "arlac77/entitlement-provider-frontend",
      "arlac77/hook-ci-frontend-svelte",
      "arlac77/konsum-frontend-svelte",
      "arlac77/system-dashboard-frontend"
    ],
    "files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v3-orange.svg",
              "url": "https://svelte.dev"
            },
            {
              "name": "Build Status",
              "icon": "https://secure.travis-ci.org/{{github.user}}/{{github.repo}}.png",
              "url": "http://travis-ci.org/{{github.user}}/{{github.repo}}"
            }
          ]
        }
      },
      {
        "merger": "Travis",
        "pattern": ".travis.yml"
      },
      {
        "merger": "Rollup",
        "pattern": "**/rollup.config.js"
      }
    ]
  }
}
