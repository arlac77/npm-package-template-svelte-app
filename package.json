{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.19.1",
    "postcss": "^7.0.17",
    "postcss-import": "^12.0.1",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "svelte": "^3.6.7",
    "svelte-easyroute-rollup": "^1.0.1",
    "svelte-preprocess": "^2.14.4",
    "npm-pkgbuild": "^6.6.1",
    "semantic-release": "^15.13.19",
    "@semantic-release/exec": "^3.3.5"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "config": {
    "api": "api",
    "proxyTarget": "https://somewhere/",
    "urlPrefix": "/services/{{name}}/"
  },
  "pacman": {
    "groups": "{{group}}",
    "install": "pacman/install.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=242.32",
      "nginx-mainline": ">=1.17.1"
    }
  },
  "template": {
    "usedBy": [
      "arlac77/svelte-playground",
      "arlac77/system-dashboard-frontend"
    ],
    "_files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v2-orange.svg",
              "url": "https://svelte.dev"
            }
          ]
        }
      }
    ]
  }
}